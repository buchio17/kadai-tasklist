<% if logged_in? %>
  <div class="row">
    <div class="col-md-4">
      <%= render 'tasks/form', task: @task %>
    </div>
    <div class="col-xs-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
  <div class="center jumboton">
    <div class="text-center">
      <h1>Welcome to the tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>



